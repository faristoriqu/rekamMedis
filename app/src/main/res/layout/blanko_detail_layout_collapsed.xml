<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:backgroundTint="@color/colorPrimaryDark">


    <RelativeLayout
        android:id="@+id/parentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingEnd="16dp"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/collapsed_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            tools:text="Collapsed View"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnDeleteBlanko"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_trash_white"
                app:tint="@android:color/white" />

            <ImageView
                android:id="@+id/btnEditBlanko"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginEnd="20dp"
                app:tint="@android:color/white"
                android:src="@drawable/ic_pencil_white" />

            <com.sysdata.widget.accordion.ArrowImageView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:tint="@android:color/white"
                app:expanded="false"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>