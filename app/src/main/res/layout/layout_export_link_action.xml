<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="16sp"
            android:textColor="@color/colorDark"
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salin, Bagikan atau Buka di Browser Link Berikut"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_below="@id/message"
            android:id="@+id/layout_export_link"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:text="http://dev.sabin"
                android:id="@+id/export_link"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/img_copy"
                android:foreground="?attr/selectableItemBackground"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_content_copy"
                app:tint="@color/colorPrimary" />

            <View
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorGray"

                />

            <ImageView
                android:id="@+id/img_share"
                android:foreground="?attr/selectableItemBackground"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_share"
                app:tint="@color/colorPrimary" />

            <View
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorGray"

                />

            <ImageView
                android:id="@+id/img_open"
                android:padding="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_open_in_new"
                app:tint="@color/colorAccent" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>